
@model Team
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-lg-6 h3 mb-4 text-gray-800">
        <h1>Team Update</h1>
    </div>
 
    <div class="col-lg-12 mx-auto">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control bg-light" placeholder="Enter team member full Name">
                <span asp-validation-for="FullName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="Position" class="form-control bg-light" placeholder="Enter position">
                <span asp-validation-for="Position"></span>
            </div>
            <div class="form-group">
                <label asp-for="File"></label>
                <input asp-for="File" accept="image/jpeg" class="form-control bg-light" placeholder="Image">
                <span asp-validation-for="File"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
