@model Blog
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-6 h3 mb-4 text-gray-800">
        <h1>Blog Create</h1>
    </div>
    <div class="col-lg-12 mx-auto">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control bg-light" placeholder="Enter description">
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control bg-light" placeholder="Enter title">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="File"></label>
                <input asp-for="File" accept="image/jpeg" class="form-control bg-light">
                <span asp-validation-for="File" class="text text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

