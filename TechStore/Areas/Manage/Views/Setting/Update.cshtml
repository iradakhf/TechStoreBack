@model Setting
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-lg-12 h3 mb-4 text-gray-800">
        <h1>Setting Update</h1>
    </div>
    <div class="col-lg-12 mx-auto">
        <form method="post" enctype="multipart/form-data">
            @if (Model.Key == "paypal")
            {
                <div class="form-group">
                    <label>Paypal</label>
                    <input asp-for="Paypal" accept="image/png" class="form-control" placeholder="Enter logo">
                    <span class="text-danger" asp-validation-for="Paypal"></span>
                </div>
            }
            else
            {
            <div class="form-group">
                <label>@Model.Key</label>
                <input asp-for="@Model.Key" class="form-control" placeholder="Enter logo">
                <span class="text-danger" asp-validation-for="@Model.Key"></span>
            </div>
            }
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
