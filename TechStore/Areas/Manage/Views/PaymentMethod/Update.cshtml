
@model PaymentMethod
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-lg-6 h3 mb-4 text-gray-800">
        <h1>payment update</h1>
    </div>
   
    <div class="col-lg-12 mx-auto">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control bg-light" placeholder="Enter name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control bg-light" placeholder="Enter Description">
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentImageFile"></label>
                <input asp-for="PaymentImageFile" accept="image/png" class="form-control bg-light" placeholder="payment image">
                <span asp-validation-for="PaymentImageFile"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

