@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Slider Page</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        №
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Link
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Regular Price
                    </th>
                    <th>
                        Sale Price
                    </th>
                    <th>
                        Created at
                    </th>
                    <th>
                        Updated at
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Slider slider in Model)
                {
                <tr>
                    <td>
                        @counter
                    </td>

                    <td>
                        <img width="100" src="~/assets/images/homeSlider/@slider.Image" />
                    </td>
                    <td>
                        @slider.Title

                    </td>
                    <td>
                        @slider.Name

                    </td>
                    <td>
                        @slider.Link

                    </td>
                    <td>
                        @slider.Description

                    </td>
                    <td>
                        @slider.RegularPrice

                    </td>
                    <td>
                        @slider.SalePrice

                    </td>
                    <td>
                        @slider.CreatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        @slider.UpdatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        <a class="btn btn-dark" asp-area="manage" asp-controller="slider" asp-action="create">Create</a>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="slider" asp-action="update" asp-route-id="@slider.Id">Update</a>
                        <a class="btn btn-danger" asp-area="manage" asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id">Delete</a>

                    </td>
                </tr>
                    counter++;
                }


            </tbody>
        </table>

    </div>
</div>
