@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Contact Page</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        №
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Created at
                    </th>
                    <th>
                        Updated at
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Contact contact in Model)
                {
                    <tr>
                        <td>
                            @counter
                        </td>

                        <td>
                            <img width="100" src="~/assets/images/@contact.Image" />
                        </td>
                        <td>
                            @contact.Title
                        </td>
                        <td>
                            @contact.Description
                        </td>
                        <td>
                            @contact.CreatedAt?.ToString("dd/mm/yyyy")
                        </td>
                        <td>
                            @contact.UpdatedAt?.ToString("dd/mm/yyyy")
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-area="manage" asp-controller="contact" asp-action="update" asp-route-id="@contact.Id">Update</a>

                        </td>
                    </tr>
                    counter++;
                }


            </tbody>
        </table>

    </div>
</div>
