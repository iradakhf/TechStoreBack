@model IEnumerable<Banner>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Banner Page</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        №
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Link
                    </th>
                    <th>
                        Created at
                    </th>
                    <th>
                        Updated at
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Banner banner in Model)
                {
                <tr>
                    <td>
                        @counter
                    </td>

                    <td>
                        <img width="100" src="~/assets/images/Banner/@banner.Image" />
                    </td>
                    <td>
                        @banner.Link
                    </td>
                    <td>
                        @banner.CreatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        @banner.UpdatedAt?.ToString("dd/mm/yyyy")
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="banner" asp-action="update" asp-route-id="@banner.Id">Update</a>

                    </td>
                </tr>
                    counter++;
                }


            </tbody>
        </table>

    </div>
</div>
