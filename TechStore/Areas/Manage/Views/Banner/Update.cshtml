@model Banner
@{
    ViewData["Title"] = "Update";
}

<h1 class="h3 mb-4 text-gray-800">Update Banner</h1>
<div class="row justify-content-center">
    <div class="col-lg-8">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Link">Link</label>
                <input asp-for="Link" class="form-control bg-light" placeholder="Link">
                <span asp-validation-for="Link" class="text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="File"></label>
                <input asp-for="File" accept="image/jpeg" class="form-control bg-light">
                <span asp-validation-for="File" class="text text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>