@model IEnumerable<Category>
@{
    int count = (ViewBag.PageIndex - 1) * 5;
}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Product Count</th>
            <th scope="col">Image</th>
            <th>
                Created at
            </th>
            <th>
                Updated at
            </th>
            <th scope="col">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category category in Model)
        {
            count++;
        <tr>
            <th class="align-middle" scope="row">@count</th>
            <td class="align-middle">@category.Name</td>
            <td class="align-middle">@category.Products.Count()</td>
            @if (category.IsMain == true)
            {
                <td class="align-middle" style="width:10%"><img width="50%" src="~/assets/images/category-icon/@category?.Image" alt="Alternate Text" style="width:90%" /></td>
            }
            else
            {
                <td class="align-middle" style="width:10%">No Data</td>
            }
            <td>
                @category.CreatedAt?.ToString("dd/mm/yyyy")
            </td>
            <td>
                @category.UpdatedAt?.ToString("dd/mm/yyyy")
            </td>
            <td class="d-flex p-5">
                <a class="btn btn-warning" style="margin-right:10px" asp-action="Update" asp-route-page="@ViewBag.PageIndex" asp-route-id="@category.Id">Update</a>
                <a class="btn  btn-danger" asp-route-page="@ViewBag.PageIndex" asp-action="delete" asp-route-id="@category.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>