@model IEnumerable<PaymentMethod>
@{
    int count = (ViewBag.PageIndex - 1) * 5;
}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Description</th>
            <th>
                Updated at
            </th>
            <th scope="col">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PaymentMethod payment in Model)
        {
            count++;
        <tr>
            <th class="align-middle" scope="row">@count</th>
            <td class="align-middle">@payment.Name</td>
            <td class="align-middle" style="width:10%"><img width="50%" src="~/assets/images/payment/@payment?.MainImage" alt="Alternate Text" style="width:90%" /></td>
            <td class="align-middle">@payment.Description</td>
            <td>
                @payment.UpdatedAt?.ToString("dd/mm/yyyy")
            </td>
            <td class="d-flex p-5">
                <a class="btn btn-warning" style="margin-right:10px" asp-action="Update" asp-route-page="@ViewBag.PageIndex" asp-route-id="@payment.Id">Update</a>
            </td>
        </tr>
        }
    </tbody>
</table>