@model SpecialOffer
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-6 h3 mb-4 text-gray-800">
        <h1>Special Offer Create</h1>
    </div>
    <div class="col-lg-12 mx-auto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter Slider Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecialOfferFile">Image</label>
                <input asp-for="SpecialOfferFile" class="form-control">
                <span class="text-danger" asp-validation-for="SpecialOfferFile"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId"></label>
                <select class="form-control bg-light" asp-for="ProductId" asp-items="@new SelectList(ViewBag.Product, nameof(Product.Id), nameof(Product.Name))">
                    <option value="" selected>Choose Product</option>
                </select>
                <span class="text-danger" asp-validation-for="ProductId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
