@model IEnumerable<SpecialOffer>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Special offer page</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        №
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        discount
                    </th>
                    <th>
                      special offer  product
                    </th>
                    <th>
                        Created at
                    </th>
                    <th>
                        Updated at
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (SpecialOffer specialOffer in Model)
                {
                    <tr>
                        <td>
                            @counter
                        </td>

                        <td>
                            <img width="100" src="~/assets/images/@specialOffer.Image" />
                        </td>
                        <td>
                            @specialOffer.Description

                        </td>
                        <td>
                           $ @specialOffer.Discount

                        </td>
                        <td>
                            @specialOffer.Product.Name

                        </td>
                       
                        <td>
                            @specialOffer.CreatedAt?.ToString("dd/mm/yyyy")
                        </td>
                        <td>
                            @specialOffer.UpdatedAt?.ToString("dd/mm/yyyy")
                        </td>
                        <td>
                            <a class="btn btn-dark" asp-area="manage" asp-controller="specialOffer" asp-action="create">Create</a>
                            <a class="btn btn-warning" asp-area="manage" asp-controller="specialOffer" asp-action="update" asp-route-id="@specialOffer.Id">Update</a>
                            <a class="btn btn-danger" asp-area="manage" asp-controller="specialOffer" asp-action="delete" asp-route-id="@specialOffer.Id">Delete</a>

                        </td>
                    </tr>
                    counter++;
                }


            </tbody>
        </table>

    </div>
</div>
