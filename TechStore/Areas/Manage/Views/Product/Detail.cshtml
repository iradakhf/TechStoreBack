@model Product
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Product Detail</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card" style="width: 100%;">
            <img class="card-img-top" style="width: 20%" src="~/assets/images/product/@Model.MainImage" alt="Product Image">
            <div class="card-body">
                <div class="card-title">
                    <span class="text-primary">Name of Product:</span> @Model.Name
                </div>
                <div class="card-title"><span class="text-primary">Price:</span>@Model.Price</div>
                <div class="card-title"><span class="text-primary">Product Brand:</span>@((Model.Brand)==null? "no brand": Model.Brand.Name)</div>
                <div class="card-title"><span class="text-primary">Product Code:</span>@Model.Code</div>
                <div class="card-title"><span class="text-primary">Price:</span>@Model.Price</div>
                <div class="card-title"><span class="text-primary">Discounted price:</span>@Model.DiscountedPrice</div>
                <div class="card-title"><span class="text-primary">info text:</span>@Model.infoText</div>
                <div class="card-title"><span class="text-primary">is best seller:</span>@Model.IsBestSeller</div>
                <div class="card-title"><span class="text-primary">is featured:</span>@Model.IsFeatured</div>
                <div class="card-title"><span class="text-primary">is new arrival:</span>@Model.IsNewArrival</div>
                <div class="card-title"><span class="text-primary">created at:</span>@Model.CreatedAt?.ToString("dd/mm/yyyy")</div>
                <div class="card-title"><span class="text-primary">updated at:</span>@Model.UpdatedAt?.ToString("dd/mm/yyyy")</div>
                <div class="card-title"><span class="text-primary">seria:</span>@Model.Seria</div>
                <div class="card-title"><span class="text-primary">Category:</span>@Model.Category.Name</div>
                <div class="card-title"><span class="text-primary">Product Colors:</span>@string.Join(", ", Model.ProductColors.Select(x => x.Color.Name))</div>

            </div>
        </div>
        <div class="col-lg-6">
            <a class="btn btn-primary" asp-controller="product" asp-action="Index" asp-route-page="@ViewBag.PageIndex">Index</a>
        </div>
    </div>
</div>