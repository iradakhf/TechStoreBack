@model IEnumerable<PaymentMethod>

<section id="services">
    <div class="container">
        <div class="row align-items-baseline">
            @foreach (PaymentMethod item in Model.Take(4))
            {
            <div class="col-lg-3 col-xl-3 col-xxl-3 col-md-3 col-sm-6 col-6 text-center boox">
                <img src="~/assets/images/payment/@item.MainImage" alt="">
                <h3>@item.Name</h3>
                <p>@item.Description</p>
            </div>

            }
        </div>
    </div>
</section>