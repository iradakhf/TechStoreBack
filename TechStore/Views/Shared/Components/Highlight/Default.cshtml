@model ProductVM

<section id="highlights">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-xl-4 col-xxl-4 col-md-4 col-sm-12 col-12">
                <div class="heading">
                    <h3>Bestsellers</h3>
                </div>
                @foreach (Product item in Model.BestSellers.Take(3))
                {
                <div class="box mb-4">
                    <div class="row">
                        <div class="col-lg-4 col-xl-4 col-xxl-4 col-md-4 col-sm-4 col-4">
                            <img src="~/assets/images/product/@item.MainImage" alt="">
                        </div>
                        <div class="col-lg-8 col-xl-8 col-xxl-8 col-md-8 col-sm-8 col-8">
                            <a href="">@item.Name</a>
                            <div class="starts">
                                <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i>
                            </div>
                            <div class="discount">
                                <span>$@item.Price</span>
                            </div>
                            <div class="sale">
                                <span>$@item.DiscountedPrice</span>
                            </div>
                        </div>
                    </div>
                </div>

                }
            </div>
            <div class="col-lg-4 col-xl-4 col-xxl-4 col-md-4 col-sm-12 col-12">
                <div class="heading">
                    <h3>Featured</h3>
                </div>
                @foreach (Product item in Model.Featured.Take(3))
                {
                    <div class="box mb-4">
                        <div class="row">
                            <div class="col-lg-4 col-xl-4 col-xxl-4 col-md-4 col-sm-4 col-4">
                                <img src="~/assets/images/product/@item.MainImage" alt="">
                            </div>
                            <div class="col-lg-8 col-xl-8 col-xxl-8 col-md-8 col-sm-8 col-8">
                                <a href="">@item.Name</a>
                                <div class="starts">
                                    <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i>
                                </div>
                                <div class="discount">
                                    <span>$@item.Price</span>
                                </div>
                                <div class="sale">
                                    <span>$@item.DiscountedPrice</span>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
            <div class="col-lg-4 col-xl-4 col-xxl-4 col-md-4 col-sm-12 col-12">
                <div class="heading">
                    <h3>Hot Sale</h3>
                </div>
                @foreach (Product item in Model.NewArrivals.Take(3))
                {
                    <div class="box mb-4">
                        <div class="row">
                            <div class="col-lg-4 col-xl-4 col-xxl-4 col-md-4 col-sm-4 col-4">
                                <img src="~/assets/images/product/@item.MainImage" alt="">
                            </div>
                            <div class="col-lg-8 col-xl-8 col-xxl-8 col-md-8 col-sm-8 col-8">
                                <a href="">@item.Name</a>
                                <div class="starts">
                                    <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i> <i class="fa-solid fa-star"></i>
                                </div>
                                <div class="discount">
                                    <span>$@item.Price</span>
                                </div>
                                <div class="sale">
                                    <span>$@item.DiscountedPrice</span>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>