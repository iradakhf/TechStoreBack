@model ProductVM


<section id="categories">
    <div class="container">
        <div class="categoryGeneral">
            <div class="productTab">
                <ul class="d-flex flex-wrap">
                    <li id="smartphonesOnCG">Smartphones</li>
                    <li id="tabletsOnCG">Tablet</li>
                    <li id="gameBoxOnCG">Game Box</li>
                    <li id="accessoriesOnCG">Accessories</li>
                    <li id="mobileOnCG">Mobile</li>
                    <li id="computersOnCG">Computers</li>
                </ul>
            </div>

                <div class="productPart">
                    <div class="row">


                        @foreach (Category item in Model.Categories.Take(1))
                        {

                            <div class="productPart">
                                <div class="row">
                                    <div class="col-lg-6 col-xxl-6 col-xl-6 col-md-12 col-sm-12 col-12 d-flex align-items-center justify-content-center">
                                        @foreach (Product product in Model.Products.Where(p => p.CategoryId == item.Id).Take(1))
                                        {

                                            <div class="imageAndTextBoxLeft">
                                                <div class="box">
                                                    <img src="~/assets/images/product/@product.MainImage" alt="">
                                                </div>
                                                <div class="textPart">
                                                    <div class="title d-flex justify-content-center">
                                                        <span>-</span>
                                                        <div class="text">
                                                            @product.Category.Name
                                                        </div>
                                                    </div>
                                                    <div class="productDescription">
                                                        <a asp-controller="product" asp-action="index">@item.Name <br> G2356</a>
                                                    </div>
                                                    <div class="priceSection d-flex">
                                                        <div class="discount">
                                                            $@product.Price
                                                        </div>
                                                        <div class="sale">
                                                            <del>
                                                                $@product.DiscountedPrice
                                                            </del>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="onHoverBasketCompareWishListRight">
                                                    <div class="top">
                                                        <button><img src="~/assets/images/cart.png" alt=""> <span>Add to Cart</span></button>
                                                    </div>
                                                    <div class="bottom">
                                                        <div class="left">
                                                            <a href="compare.html"><img src="~/assets/images/compare.png" alt=""> Compare</a>
                                                        </div>
                                                        <div class="right">
                                                            <a href="wishlist.html"><img src="~/assets/images/wishlist.png" alt=""> Wishlist</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    </div>
                                    <div class="col-lg-6 col-xxl-6 col-xl-6 col-md-12 col-sm-12 col-12">
                                        <div class="productBox">
                                            <div class="row justify-content-between">
                                                @foreach (Product product1 in Model.Products.Take(4))
                                                {
                                                    <div id="product1" class="col-lg-6 col-xxl-6 col-xl-6 col-md-6 col-sm-6 col-6">
                                                        <div class="imageAndTextBox">
                                                            <div class="box">
                                                                <img src="~/assets/images/product/@product1.MainImage" alt="">
                                                            </div>
                                                            <div class="textPart">
                                                                <div class="title d-flex justify-content-center">
                                                                    <span>-</span>
                                                                    <div class="text">
                                                                        @product1.Category.Name
                                                                    </div>
                                                                </div>
                                                                <div class="productDescription">
                                                                    <a asp-controller="product" asp-action="index">Apple iPad Mini <br> G2356</a>
                                                                </div>
                                                                <div class="priceSection d-flex">
                                                                    <div class="discount">
                                                                        $@product1.Price
                                                                    </div>
                                                                    <div class="sale">
                                                                        <del>
                                                                            $@product1.DiscountedPrice
                                                                        </del>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="onHoverBasketCompareWishList">
                                                                <div class="top">
                                                                    <button><img src="~/assets/images/cart.png" alt=""> <span>Add to Cart</span></button>
                                                                </div>
                                                                <div class="bottom">
                                                                    <div class="left">
                                                                        <a href="compare.html"><img src="~/assets/images/compare.png" alt=""> Compare</a>
                                                                    </div>
                                                                    <div class="right">
                                                                        <a href="wishlist.html"><img src="~/assets/images/wishlist.png" alt=""> Wishlist</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                }
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        }

                    </div>
                </div>
        </div>

    </div>
</section>