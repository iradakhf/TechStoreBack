@model IEnumerable<Banner>
<section id="banner">
    <div class="bannnerGeneral">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8 col-xl-8 col-xxl-8 col-sm-8 col-md-8">
                    <div class="row flex-wrap">
                        <div class="col-lg-12 col-xl-12 col-xxl-12 col-sm-12 col-md-12">
                            <div class="row">
                                @foreach (Banner banner in Model.Take(2))
                                {
                                <div class="col-lg-6 col-xl-6 col-xxl-6 col-sm-6 col-md-6">
                                    <a @banner.Link><img src="~/assets/images/Banner/@banner.Image" alt=""></a>
                                </div>

                                }
                              
                            </div>
                        </div>
                        <div class="col-lg-12 col-xl-12 col-xxl-12 col-sm-12 col-md-12 mt-4">
                            @foreach (Banner banner in Model.Skip(2).Take(1))
                            {
                                <a @banner.Link><img src="~/assets/images/Banner/@banner.Image" alt=""></a>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-xl-4 col-xxl-4 col-sm-4 col-md-4">
                    @foreach (Banner banner in Model.Skip(3).Take(1))
                    {
                        <a @banner.Link><img src="~/assets/images/Banner/@banner.Image" alt=""></a>

                    }
                </div>
            </div>
        </div>
    </div>
</section>